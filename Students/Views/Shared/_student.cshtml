@model Students.Models.student
@{
    Layout = "_Layout";
}
<div class="container">

    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="courseModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title"> Add New Student</h6> 
                    <button class="close" data-dismiss="modal">
                        <span> &times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <form method="post" asp-action="AddNew" asp-controller="Register">
                        <div class="form-group">
                            <label asp-for="FirstName">FirstName:</label>
                            <input asp-for="FirstName" placeholder="Enter Firstname" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>LastName:</label>
                            <input asp-for="LastName" placeholder="Enter Lastname" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Course:</label>
                            <input asp-for="Course" placeholder="Enter Course name" class="form-control" />
                            <span asp-validation-for="Course" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Add Student</button>
                            <button class="btn btn-light" data-dismiss="modal">Close</button>
                        </div>

                    </form>


                </div>


            </div>

        </div>

    </div>

</div>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
