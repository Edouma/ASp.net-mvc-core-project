@model Students.Models.Fees.Fee
@{
    Layout = "_Layout";
}

<div class="modal fade" id="AddFee" tabindex="-1" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title"> Make Payment...</h6>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">

                <form method="post" asp-action="AddNew" asp-controller="Fee">
                    <div class="form-group">
                        <label asp-for="AmountPaid">Amount Paid:</label>
                        <input asp-for="AmountPaid" placeholder="Amount Paid" class="form-control" />
                        <span asp-validation-for="AmountPaid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date_Paid">Date Paid:</label>
                        <input asp-for="Date_Paid" placeholder="Date of Payment" class="form-control" />
                        <span asp-validation-for="Date_Paid" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Balance">Balance:</label>
                        <input asp-for="Balance" placeholder="Enter Balance" class="form-control" />
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StudentId">StudentId:</label>
                        <input asp-for="StudentId" placeholder="Enter Student Id" class="form-control" />
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>

                    @*<div>
                        <select asp-for="FeeId" asp-items="@(new SelectList(ViewBag.message,"FeeId","Cname"))"></select>
                    </div>*@

                    <div class="modal-footer">
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary btn-sm">Make Payment </button>
                            <button class="btn btn-dark btn-sm" data-dismiss="modal">Close</button>

                        </div>

                    </div>

                </form>


            </div>

            
        </div>

    </div>

</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
