@model Students.Models.Course1

<div class="container">
    
    @*<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#courseModal">Insert</button>*@

    <div class="modal" data-keyboard="false" data-backdrop="static" id="courseModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title"> Add Course</h6>
                    <button class="close" data-dismiss="modal">
                        <span> &times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <form method="post" asp-action="AddNew" asp-controller="Course">
                        <div class="form-group">
                            <label>CourseName:</label>
                            <input asp-for="CourseName" placeholder="Enter Course Name" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-sm">Save Course</button>
                            <button class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                        </div>

                    </form>


                </div>





            </div>

        </div>

    </div>

</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    }