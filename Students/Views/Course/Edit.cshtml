@model Students.Models.Course1
@{
    Layout = "_Layout";
}

<div class="container">
    <form method="post" asp-action="Edit" asp-controller="Course">
        <div class="form-group">
            <label asp-for="CourseName">CourseName:</label>
            <input asp-for="CourseName" placeholder="Enter Course Name" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <div class="form-group">

                <button type="submit" class="btn btn-primary btn-sm">Edit Course </button>
                
            </div>

    </form>
</div>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
